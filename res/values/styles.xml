<?xml version="1.0" encoding="UTF-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
         Base application theme, dependent on API level. This theme is replaced 
		by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme">
        <!--
             Theme customizations available in newer API levels can go in res/values-vXX/styles.xml, 
			while customizations related to backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!--
             All customizations that are NOT specific to a particular API-level 
			can go here.
        -->
    </style>

    <style name="ImageTile">
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="ImageTile.Home">
        <item name="android:layout_width">294dp</item>
        <item name="android:layout_height">120dp</item>
    </style>

    <style name="ImageTile.Home.Tall">
        <item name="android:layout_height">187dp</item>
    </style>

    <style name="ImageTile.Home.Square">
        <item name="android:layout_width">140dp</item>
    </style>

    <style name="ImageTile.Store">
        <item name="android:layout_marginTop">@dimen/page_padding_narrow</item>
    </style>

    <style name="ImageTile.Store.FirstRow">
        <item name="android:layout_marginTop">@dimen/no_spacing</item>
    </style>

    <style name="ImageTile.Store.FirstColumn">
        <item name="android:layout_marginRight">@dimen/page_padding_narrow</item>
    </style>

    <style name="ImageTile.Store.FirstRow.FirstColumn">
        <item name="android:layout_marginRight">@dimen/page_padding_narrow</item>
    </style>

    <style name="ArtisanTextBold">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ArtisanTextBold.Large">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ArtisanTextBold.Small">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ArtisanTextMuted">
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>
    <style name="ProfileLabels">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:columnCount="3"
        android:padding="@dimen/page_padding_standard" >

        <GridLayout
            android:id="@+id/aboutNavigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="3"
            android:layout_gravity="center_horizontal"
            android:columnCount="1" >

            <ImageView
                android:id="@+id/navigateToAbout"
                style="@style/ImageTile.Home.Tall"
                android:layout_columnSpan="1"
                android:onClick="navigateToAbout"
                android:src="@drawable/home_tile_artisan" />

            <Space
                android:layout_height="@dimen/page_padding_standard"
                android:layout_columnSpan="1" />
        </GridLayout>

        <GridLayout
			android:id="@+id/storeNavigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="3"
            android:layout_gravity="center_horizontal"
            android:columnCount="1" >

            <ImageView
                android:id="@+id/navigateToStore"
                style="@style/ImageTile.Home"
                android:layout_columnSpan="1"
                android:onClick="navigateToStore"
                android:src="@drawable/home_tile_store" />

            <Space
                android:layout_height="@dimen/page_padding_standard"
                android:layout_columnSpan="1" />
        </GridLayout>

        <GridLayout
            android:id="@+id/otherNavigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="3"
            android:layout_gravity="center_horizontal"
            android:columnCount="3" >

            <ImageView
                android:id="@+id/navigateToNews"
                style="@style/ImageTile.Home.Square"
                android:onClick="navigateToNews"
                android:src="@drawable/home_tile_news" />

            <Space android:layout_width="@dimen/page_padding_standard" />

            <ImageView
                android:id="@+id/navigateToRequestDemo"
                style="@style/ImageTile.Home.Square"
                android:onClick="navigateToRequestDemo"
                android:src="@drawable/home_tile_demo" />

            <Space
                android:layout_height="@dimen/page_padding_standard"
                android:layout_columnSpan="3" />
        </GridLayout>
    </GridLayout>

</ScrollView><!-- From: file:/Users/audrey/Developer/ArtisanAndroidDemoApp2AndroidStudio/app/src/main/res/layout/activity_home.xml -->
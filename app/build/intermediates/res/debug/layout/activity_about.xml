<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/activity_about_visit_website"
        android:padding="@dimen/page_padding_standard"
        android:scrollbarStyle="outsideOverlay" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_artisan" />
    </ScrollView>

    <Button
        android:id="@id/activity_about_visit_website"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/page_padding_narrow"
        android:layout_marginLeft="@dimen/page_padding_standard"
        android:layout_marginRight="@dimen/page_padding_standard"
        android:background="@drawable/btn_long"
        android:onClick="visitWebsite"
        android:text="@string/visit_website" />

</RelativeLayout><!-- From: file:/Users/audrey/Developer/ArtisanAndroidDemoApp2AndroidStudio/app/src/main/res/layout/activity_about.xml -->